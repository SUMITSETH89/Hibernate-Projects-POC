<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping >
  <!--Mapping Entity Class With Database Table-->
  <class name="com.sLsD.entity.Product" table="PRODUCT">
  
  <!--Identity Property Configuration-->
  <id name="pId" column="PID" type="java.lang.Long">
    <!--Id Generator-->
     <generator class="increment"/>
  </id>
  
  <!--Mapping Entity Class Properties With Database Table Columns-->
  <property name="pname" column="PNAME" type="java.lang.String"/>
  <property name="price" column="PRICE" type="java.lang.Integer"/>
  <property name="qty" column="QTY" type="java.lang.Integer"/>
  </class>
</hibernate-mapping>